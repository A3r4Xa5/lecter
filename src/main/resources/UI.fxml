<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXListView?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>
<?import org.controlsfx.control.textfield.CustomTextField?>

<BorderPane fx:id="rssViewContainer" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="650.0" minWidth="700.0" prefHeight="727.0" prefWidth="1071.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.bayang.reader.controllers.RssController">
         <center>
            <SplitPane dividerPositions="0.25, 0.6" BorderPane.alignment="CENTER">
              <items>
            <VBox>
               <children>
                        <TreeView fx:id="treeView" minHeight="600.0" minWidth="100.0" prefHeight="600.0" prefWidth="110.0" VBox.vgrow="ALWAYS" />
               </children>
            </VBox>
            <VBox>
               <children>
                        <JFXListView fx:id="listView" minWidth="230.0" VBox.vgrow="ALWAYS" />
                  <HBox alignment="CENTER" VBox.vgrow="NEVER">
                     <children>
                        <FontAwesomeIconView fx:id="plusIcon" glyphName="PLUS" size="14" />
                     </children></HBox>
               </children>
            </VBox>
            <VBox>
               <children>
                        <WebView fx:id="webView" minHeight="600.0" minWidth="240.0" prefWidth="240.0" VBox.vgrow="ALWAYS" />
                        <HBox alignment="CENTER" spacing="10.0" VBox.vgrow="NEVER">
                           <children>
                              <RadioButton fx:id="rssRadioButton" mnemonicParsing="false" text="%rss" />
                              <RadioButton fx:id="webRadioButton" mnemonicParsing="false" text="%web" />
                              <RadioButton fx:id="readabilityRadioButton" mnemonicParsing="false" text="Readability" />
                           </children>
                        </HBox>
               </children>
            </VBox>
              </items>
            </SplitPane>
         </center>
   <top>
      <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <items>
          <Button fx:id="loginButton" contentDisplay="GRAPHIC_ONLY" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0" mnemonicParsing="false" onAction="#loginMenuFired" prefHeight="32.0" prefWidth="32.0" text="Button">
               <graphic>
                  <FontAwesomeIconView fx:id="loginIcon" fill="#a5a3a3" glyphName="USER" size="24.0" />
               </graphic>
               <tooltip>
                  <Tooltip text="%login" />
               </tooltip></Button>
          <Button fx:id="refreshButton" contentDisplay="GRAPHIC_ONLY" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0" mnemonicParsing="false" onAction="#refreshFired" prefHeight="32.0" prefWidth="32.0" text="Button">
               <graphic>
                  <FontAwesomeIconView fx:id="refreshIcon" fill="#a5a3a3" glyphName="REFRESH" size="24.0" />
               </graphic>
               <tooltip>
                  <Tooltip text="%refresh" />
               </tooltip></Button>
               <Button fx:id="markReadButton" contentDisplay="GRAPHIC_ONLY" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0" mnemonicParsing="false" onAction="#markReadButtonFired" prefHeight="32.0" prefWidth="32.0" text="Button">
               <graphic>
                  <FontAwesomeIconView fx:id="markReadIcon" fill="#a5a3a3" glyphName="EYE" size="24.0" />
               </graphic>
               <tooltip>
                  <Tooltip text="%markRead" />
               </tooltip></Button>
               <Button fx:id="addSubscriptionButton" contentDisplay="GRAPHIC_ONLY" maxHeight="32.0" maxWidth="32.0" minHeight="32.0" minWidth="32.0" mnemonicParsing="false" onAction="#addSubscriptionFired" prefHeight="32.0" prefWidth="32.0" text="Button">
               <graphic>
                  <FontAwesomeIconView fx:id="addSubscriptionIcon" fill="#a5a3a3" glyphName="PLUS" size="24.0" />
               </graphic>
               <tooltip>
                  <Tooltip text="%addSubscription" />
               </tooltip></Button>
               <Pane HBox.hgrow="ALWAYS" />
            <CustomTextField fx:id="searchBar" prefWidth="300.0" promptText="%searchPrompt" />
                  <ProgressIndicator fx:id="progressIndicator" prefWidth="24.0" progress="0.0" />
            <Pane HBox.hgrow="ALWAYS" />
            <MenuButton alignment="CENTER" contentDisplay="GRAPHIC_ONLY" maxHeight="32.0" minHeight="32.0" minWidth="48.0" mnemonicParsing="false" prefHeight="32.0" prefWidth="48.0">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
                <MenuItem mnemonicParsing="false" text="Action 2" />
              </items>
              <graphic>
                  <FontAwesomeIconView fx:id="settingsIcon" fill="#a5a3a3" glyphName="COG" size="24.0" />
               </graphic>
            </MenuButton>
            
        </items>
      </ToolBar>
   </top>
</BorderPane>
