<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXProgressBar?>
<?import com.jfoenix.controls.JFXRadioButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.web.WebView?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.MenuItem?>

<VBox fx:id="container" alignment="CENTER" prefHeight="600.0"
    prefWidth="800.0" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="me.bayang.reader.controllers.PopupWebViewController">
    <children>
        <JFXProgressBar id="popupProgress" fx:id="progressBar"
            styleClass="webViewProgress" VBox.vgrow="ALWAYS">
            <VBox.margin>
                <Insets />
            </VBox.margin>
        </JFXProgressBar>
        <WebView fx:id="popupWebView" prefHeight="200.0"
            prefWidth="200.0" VBox.vgrow="ALWAYS" />
        <HBox alignment="CENTER" prefWidth="200.0" styleClass="plusButton">
            <children>
                <JFXRadioButton fx:id="popupRssRadioButton"
                    text="%rss">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </JFXRadioButton>
                <JFXRadioButton fx:id="popupWebRadioButton"
                    text="%web">
                    <padding>
                        <Insets right="10.0" />
                    </padding>
                </JFXRadioButton>
                <JFXRadioButton fx:id="mercuryRadioButton"
                    text="%mobileContent">
                    <HBox.margin>
                        <Insets right="10.0" />
                    </HBox.margin>
                </JFXRadioButton>
                <MenuButton contentDisplay="GRAPHIC_ONLY"
                    mnemonicParsing="false" text="MenuButton">
                    <items>
                        <MenuItem fx:id="pocketShareMenu"
                            mnemonicParsing="false" onAction="#shareItemPocket"
                            text="Pocket" />
                    </items>
                    <graphic>
                        <FontAwesomeIconView
                            glyphName="SHARE_ALT" size="20" />
                    </graphic>
                </MenuButton>
            </children>
        </HBox>
    </children>
</VBox>
