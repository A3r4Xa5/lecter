<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="cellWrapper" styleClass="gridCell" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox fx:id="firstLine" alignment="CENTER_LEFT">
         <children>
            <ImageView fx:id="icon" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="fromLabel" text="Label" wrapText="true">
               <font>
                  <Font size="14.0" />
               </font>
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin></Label>
         </children>
         <VBox.margin>
            <Insets bottom="1.0" />
         </VBox.margin>
      </HBox>
      <Label fx:id="dateLabel" alignment="BOTTOM_RIGHT" text="Label">
         <font>
            <Font size="9.0" />
         </font>
      </Label>
      <Label fx:id="subjectLabel" text="Label" wrapText="true" />
      <Label fx:id="contentLabel" text="Label" wrapText="true">
         <font>
            <Font size="11.0" />
         </font></Label>
   </children>
</VBox>
